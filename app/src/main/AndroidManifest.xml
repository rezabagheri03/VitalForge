<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Application-level metadata -->
    <uses-sdk android:minSdkVersion="26" android:targetSdkVersion="34" />

    <!-- Permissions for sensors, BLE, and export -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WatchApplication"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.VitalForge.Watch"
        tools:targetApi="34">

        <!-- Health Platform API key -->
        <meta-data
            android:name="com.google.android.health.API_KEY"
            android:value="${HEALTH_PLATFORM_API_KEY}" />

        <!-- Main Watch Activity -->
        <activity
            android:name=".ui.MainWearActivity"
            android:exported="true"
            android:theme="@style/Theme.VitalForge.Watch.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.google.android.wearable.action.WEARABLE_APPLICATION" />
            </intent-filter>
        </activity>

        <!-- BLE GATT Server Service -->
        <service
            android:name=".ble.WearBleService"
            android:exported="false"
            android:permission="android.permission.BLUETOOTH" />

        <!-- Background data processing via WorkManager -->
        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            android:exported="false" />

        <!-- Hilt injection entrypoint -->
        <meta-data
            android:name="dagger.hilt.android.internal.disableAndroidSuperclassValidation"
            android:value="true" />
    </application>
</manifest>
