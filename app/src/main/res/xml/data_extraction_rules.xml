<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Health data should never be backed up to cloud -->
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" path="health_data/" />
        <exclude domain="file" path="models/" />
    </cloud-backup>

    <device-transfer>
        <!-- Only allow non-sensitive app data during device transfer -->
        <include domain="file" path="app_preferences/" />
        <exclude domain="database" />
        <exclude domain="file" path="health_data/" />
        <exclude domain="file" path="encryption_keys/" />
    </device-transfer>
</data-extraction-rules>
